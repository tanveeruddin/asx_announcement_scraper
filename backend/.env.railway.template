# ========================================
# Railway Production Environment Variables
# ========================================
# Copy these to Railway dashboard: Settings > Variables
# Replace all placeholder values with actual production values

# ========================================
# DATABASE (Auto-provided by Railway PostgreSQL Plugin)
# ========================================
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_POOL_PRE_PING=true

# ========================================
# APPLICATION
# ========================================
APP_NAME="ASX Announcements SaaS"
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ========================================
# CORS & SECURITY
# ========================================
# Add your Vercel frontend URL here
CORS_ORIGINS=["https://your-app.vercel.app","https://www.your-domain.com"]
SECRET_KEY=<GENERATE_RANDOM_SECRET_KEY_HERE>

# ========================================
# STORAGE (Cloud Storage for Production)
# ========================================
# Option 1: AWS S3
STORAGE_TYPE=s3
S3_BUCKET_NAME=asx-announcements-prod
S3_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>

# Option 2: Cloudflare R2 (S3-compatible, cheaper)
# STORAGE_TYPE=r2
# R2_ACCOUNT_ID=<YOUR_R2_ACCOUNT_ID>
# R2_ACCESS_KEY_ID=<YOUR_R2_ACCESS_KEY>
# R2_SECRET_ACCESS_KEY=<YOUR_R2_SECRET_KEY>
# R2_BUCKET_NAME=asx-announcements-prod

# ========================================
# LLM / AI SERVICES
# ========================================
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=2048

# ========================================
# SCRAPER CONFIGURATION
# ========================================
ASX_URL=https://www.asx.com.au/asx/v2/statistics/todayAnns.do
SCRAPE_INTERVAL_MINUTES=60
MAX_CONCURRENT_DOWNLOADS=5
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# ========================================
# SCHEDULER
# ========================================
SCHEDULER_ENABLED=true
SCHEDULER_MODE=market_hours
SCHEDULER_TIMEZONE=Australia/Sydney

# ========================================
# AUTHENTICATION (Future Phase 4)
# ========================================
JWT_SECRET_KEY=<GENERATE_RANDOM_JWT_SECRET>
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_OAUTH_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_OAUTH_SECRET>

# ========================================
# STRIPE (Future Phase 4)
# ========================================
STRIPE_SECRET_KEY=sk_live_<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=whsec_<YOUR_STRIPE_WEBHOOK_SECRET>
STRIPE_MONTHLY_PRICE_ID=price_<YOUR_MONTHLY_PRICE_ID>
STRIPE_YEARLY_PRICE_ID=price_<YOUR_YEARLY_PRICE_ID>
FREE_TRIAL_DAYS=7

# ========================================
# EXTERNAL API CONFIGURATION
# ========================================
YFINANCE_CACHE_HOURS=1

# ========================================
# MONITORING & LOGGING
# ========================================
SENTRY_DSN=<YOUR_SENTRY_DSN>
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ========================================
# EMAIL (Future Phase 4 - Notifications)
# ========================================
SENDGRID_API_KEY=<YOUR_SENDGRID_API_KEY>
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME="ASX Announcements"
