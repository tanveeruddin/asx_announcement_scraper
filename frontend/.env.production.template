# ========================================
# Vercel Production Environment Variables
# ========================================
# Configure these in Vercel Dashboard: Settings > Environment Variables
# Set for: Production, Preview, Development environments

# ========================================
# API CONFIGURATION
# ========================================
# Your Railway backend API URL
NEXT_PUBLIC_API_URL=https://your-backend.railway.app

# ========================================
# APPLICATION METADATA
# ========================================
NEXT_PUBLIC_APP_NAME="ASX Announcements"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# ========================================
# AUTHENTICATION (Phase 4 - OAuth)
# ========================================
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=<GENERATE_RANDOM_SECRET>

# Google OAuth
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_OAUTH_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_OAUTH_SECRET>

# ========================================
# STRIPE (Phase 4 - Payments)
# ========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_<YOUR_STRIPE_PUBLISHABLE_KEY>

# ========================================
# ANALYTICS & MONITORING
# ========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=<YOUR_SENTRY_DSN>
SENTRY_AUTH_TOKEN=<YOUR_SENTRY_AUTH_TOKEN>

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=false
